{% extends 'base.html.twig' %}


{% block body %}
    <h1>Facturas list</h1>


    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Numfactura</th>
                <th>Fechavencimiento</th>
                <th>Pago</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for factura in facturas %}
            <tr>
                <td><a href="{{ path('factura_show', { 'id': factura.id }) }}">{{ factura.id }}</a></td>
                <td>{{ factura.numFactura }}</td>
                <td>{% if factura.fechaVencimiento %}{{ factura.fechaVencimiento|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{% if factura.pago %}Yes{% else %}No{% endif %}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('factura_show', { 'id': factura.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('factura_edit', { 'id': factura.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('factura_new') }}">Create a new factura</a>
            <a href="{{ path('prueba_homepage') }}">Volver al men√∫ principal</a>
        </li>
    </ul>


{% endblock %}

