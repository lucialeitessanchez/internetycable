{% extends 'base.html.twig' %}


{% block body %}
    <br>
    <div class="topnav">
  <a class="active" href="{{ path('factura_index') }}">Factura</a>
  <a href="{{ path('factura_new') }}">Nueva factura</a>
  <a href="{{ path('prueba_homepage') }}">Menu Principal</a>
   <a href="{{ path('expediente_index') }}">Menú Expediente</a>
    
</div>
    <br>
<ul>

    <table class="table table-borderless">
        <thead>
            <tr>
                <th>Id</th>
                <th>Num de factura</th>
                <th>Num. referencia</th>
                <th>Fecha vencimiento</th>
                <th>Pago</th>
                <th><th>Acciones</th></th>
            </tr>
        </thead>
        <tbody>
        {% for factura in facturas %}
            <tr>
                <td><a href="{{ path('factura_show', { 'id': factura.id }) }}">{{ factura.id }}</a></td>
                <td>{{ factura.numFactura }}</td>
                <td>{%for service in factura.service  %}
                        {{ service.referencia }}
                    {% endfor %}</td>
                <td>{% if factura.fechaVencimiento %}{{ factura.fechaVencimiento|date ('d-m-Y')}}{% endif %}</td>
                <td>{% if factura.pago %}Pagado{% else %}No{% endif %}</td>
                <td>

                <th><div class="btn-group" role="group" aria-label="Basic example">
                        <a href="{{ path('factura_show', { 'id': factura.id }) }}" class="btn btn-outline-primary">ver</a>
                        <a href="{{ path('factura_edit', { 'id': factura.id }) }}" class="btn btn-secondary"> editar </a>

                    </div>
                </th>

                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <br>
            <a href="{{ path('factura_new') }}">Crear nueva factura</a>
            <a href="{{ path('prueba_homepage') }}">Volver al menú principal</a>

    </ul>
    </ul>

{% endblock %}

