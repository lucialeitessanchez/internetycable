{% extends 'base.html.twig' %}


{% block body %}
    <h1>Facturas </h1>


    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Num de factura</th>
                <th>Fecha vencimiento</th>
                <th>Pago</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
        {% for factura in facturas %}
            <tr>
                <td><a href="{{ path('factura_show', { 'id': factura.id }) }}">{{ factura.id }}</a></td>
                <td>{{ factura.numFactura }}</td>
                <td>{% if factura.fechaVencimiento %}{{ factura.fechaVencimiento|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{% if factura.pago %}Yes{% else %}No{% endif %}</td>
                <td>
                    <ul>

                            <a href="{{ path('factura_show', { 'id': factura.id }) }}">ver</a>

                            <a href="{{ path('factura_edit', { 'id': factura.id }) }}">editar</a>

                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <br>
            <a href="{{ path('factura_new') }}">Crear nueva factura</a>
            <a href="{{ path('prueba_homepage') }}">Volver al men√∫ principal</a>

    </ul>


{% endblock %}

