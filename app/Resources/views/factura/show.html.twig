{% extends 'base.html.twig' %}

{% block body %}
  <ul>
    <h1>Factura</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ factura.id }}</td>
            </tr>
            <tr>
                <th>Numero de factura</th>
                <td>{{ factura.numFactura }}</td>
            </tr>
            <tr>
                <th>Fecha de vencimiento</th>
                <td>{% if factura.fechaVencimiento %}{{ factura.fechaVencimiento|date('Y-m-d') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Pago</th>
                <td>{% if factura.pago %}Pagado{% else %}No{% endif %}</td>
            </tr>
            <tr>
                <th>Servicio</th>
                {%for factura in factura%}
                <td> {{ factura.servicio_id }}</td>{% endfor %}
            </tr>

        </tbody>
    </table>

    <ul>

            <a href="{{ path('factura_index') }}">Volver al listado de facturas</a>
            <br>
            <a href="{{ path('prueba_homepage') }}">Volver al men√∫ principal</a>

        <br>
        <a href="{{ path('factura_edit', { 'id': factura.id }) }}" class="btn btn-primary">Editar</a>
        <a class="btn btn-primary">
        {{ form_start(delete_form) }}
        Borrar
        {{ form_end(delete_form) }}
        </a>
    </ul>

    </ul>
{% endblock %}
